<div class="flipbook-container">
<div id="flipbook">
	<div class="hard"><%= image_tag @book.cover_page.variant(resize_to_limit: [400,600]) %></div>
	<div class="hard"></div>

    <% @book.content_pages.each do |page| %>
        <div class="page">
            <%= image_tag page.variant(resize_to_limit: [400, 600]) %>
        </div>
    <% end %>
    <% if @book.content_pages.length.odd? %>
        <div class="page"></div>
    <% end %>
	<div class="hard"></div>
	<div class="hard">
        <%= image_tag @book.back_cover.variant(resize_to_limit: [400,600]) %>
    </div>
</div>
</div>
